
@model GarageSale.Models.Product

@{
    ViewData["Title"] = "Detalhes";
}

<button type="button" class="btn btn-outline-primary mb-3" href="javascript:void(0);" onclick="history.go(-1);"> Voltar</button>


<div class="row">
    <div class="col-xs-12 col-md-6">
        <div id=carousel_@(Model.Id) class="card-img-top carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">       
                @for (int i = 0; i < Model.Images.Count; i++)
                {
                    @if (i == 0)
                    {
                        <li data-target="#carousel_#carousel_@(Model.Id)" data-slide-to=i class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carousel_#carousel_@(Model.Id)" data-slide-to=i></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Images.Count; i++)
                {
                    @if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src=@(Model.Images[i]) height="500" style="object-fit:cover; max-height:400px; max-width:400px" alt="Imagem">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src=@(Model.Images[i]) height="500" style="object-fit:cover; max-height:400px; max-width:400px" alt="Imag em">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carousel_@(Model.Id)" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel_@(Model.Id)" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>        
    </div>
    <div class="col">
        <div>
            <h2 class="py-2">@Model.Title</h2>
            <h4>R$@Model.Price</h4>
            <p>@Model.Description</p>
            <h5>Disponibilidade: @Model.Availability</h5>
        </div>       
    </div>
</div>


    